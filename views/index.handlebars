<div class="jumbotron">
    <h1 class="">Lets Eat These Burgers!!!</h1>
    <h3 class="slide">I wont let you eat me!</h3>
    <img src="/assets/img/burgerwalks.gif" class="imgSlide"></img>
</div>
<div class="row">
    <div class="eat col 6">
        <h2>Burgers ready to be devoured!</h2>

        <ul>
            {{#each burger}}
            {{#unless devoured}}
            {{> burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>


    <div class="eaten col 6">
        <h2>Burgers that have been devoured!</h2>

        <ul>
            {{#each burger}}
            {{#if devoured}}
            {{> burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="add">
    <div class="holder">
        <h2>Add a burger to eat</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="burg">Burger Name:</label>
                <input type="text" id="burg" name="devoured">
            </div>

            <button type="submit">Add burger to the list!</button>
        </form>
    </div>
</div>